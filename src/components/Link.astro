---
import { cn } from "@lib/utils";

type Props = {
  href: string;
  external?: boolean;
  underline?: boolean;
  classes?: string; // Allow users to pass additional classes
};

const { href, external, underline = true, classes = "", ...rest } = Astro.props;
---

<a
  href={href}
  target={external ? "_blank" : "_self"}
  class={cn(
    "inline-block decoration-black/15 dark:decoration-white/30 hover:decoration-black/25 hover:dark:decoration-white/50 text-current hover:text-indigo-600 hover:dark:text-indigo-400 transition-colors duration-300 ease-in-out",
    underline && "underline underline-offset-2",
    classes // Merge user-defined classes
  )}
  {...rest}
>
  <slot />
</a>
